<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="600" prefHeight="380"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pos.controller.ModifierOptionsController">
    
        <stylesheets>
            <URL value="@/pos/css/modifieroptions.css"/>
        </stylesheets>
    <VBox spacing="10" layoutX="15" layoutY="15">
        <Label fx:id="lblTitle" text="Modifier Options" style="-fx-font-size: 18;"/>

        <TableView fx:id="tableView" prefHeight="220">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Option" prefWidth="280"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="120"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <TextField fx:id="txtName" promptText="Option name" prefWidth="280"/>
            <TextField fx:id="txtPrice" promptText="Price" prefWidth="120"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Add" onAction="#addOption"/>
            <Button text="Update" onAction="#updateOption"/>
            <Button text="Delete" onAction="#deleteOption"/>
        </HBox>
    </VBox>
</AnchorPane>
