<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="760" prefHeight="420"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pos.controller.BundleManagementController">
        <stylesheets>
            <URL value="@/pos/css/bundlemanagement.css"/>
        </stylesheets>
    <VBox spacing="10" layoutX="15" layoutY="15">
        <Label fx:id="lblTitle" text="Manage Bundle Items" style="-fx-font-size: 18;"/>

        <TableView fx:id="tableView" prefHeight="240">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colItemName" text="Item Product" prefWidth="320"/>
                <TableColumn fx:id="colQty" text="Qty" prefWidth="80"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <ComboBox fx:id="cmbProducts" prefWidth="320" promptText="Select product item"/>
            <TextField fx:id="txtQty" promptText="Qty" prefWidth="80"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Add Item" onAction="#addItem"/>
            <Button text="Update Qty" onAction="#updateQty"/>
            <Button text="Delete Item" onAction="#deleteItem"/>
        </HBox>
    </VBox>
</AnchorPane>
