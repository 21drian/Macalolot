<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="500" prefHeight="400"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pos.controller.SupplierManagementController">
    
    <stylesheets>
        <URL value="@/pos/css/suppliermanagement.css"/>
    </stylesheets>

    <VBox spacing="10" layoutX="20" layoutY="20">

        <Label text="Manage Suppliers" style="-fx-font-size: 18;" />

        <TableView fx:id="tableView" prefHeight="180">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="120"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="140"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="100"/>
            </columns>
        </TableView>

        <TextField fx:id="txtName" promptText="Name"/>
        <TextField fx:id="txtEmail" promptText="Email"/>
        <TextField fx:id="txtPhone" promptText="Phone"/>
        <TextField fx:id="txtAddress" promptText="Address"/>

        <HBox spacing="10">
            <Button text="Add" onAction="#addSupplier"/>
            <Button text="Update" onAction="#updateSupplier"/>
            <Button text="Delete" onAction="#deleteSupplier"/>
        </HBox>

    </VBox>
</AnchorPane>