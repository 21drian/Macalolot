<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="600" prefHeight="500" minWidth="500" minHeight="400" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.controller.SupplierManagementController">
    
    <stylesheets>
        <URL value="@/pos/css/suppliermanagement.css"/>
    </stylesheets>
    
    <VBox spacing="12" AnchorPane.topAnchor="12" AnchorPane.bottomAnchor="12" AnchorPane.leftAnchor="12" AnchorPane.rightAnchor="12">
        
        <!-- Compact Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <VBox spacing="2" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" text="ðŸ¢ Manage Suppliers">
                    <font><Font name="Arial Bold" size="18" /></font>
                </Label>
                <Label style="-fx-text-fill: #6c757d; -fx-font-size: 11px;" text="Add, update, or remove supplier information" />
            </VBox>
            <Label style="-fx-background-color: #e9ecef; -fx-text-fill: #6c757d; -fx-padding: 4 12; -fx-background-radius: 12; -fx-font-size: 11px; -fx-font-weight: 600;" text="0 SUPPLIERS" />
        </HBox>
        
        <!-- Table Section with Priority -->
        <VBox spacing="8" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <Label style="-fx-text-fill: #495057; -fx-font-size: 12px; -fx-font-weight: 600;" text="SUPPLIER LIST">
                <font><Font name="Arial" size="12" /></font>
            </Label>
            
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" minWidth="40" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colName" text="Supplier Name" prefWidth="160" minWidth="100"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180" minWidth="120"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="120" minWidth="80" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>
        </VBox>
        
        <!-- Compact Form Section -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <Label style="-fx-text-fill: #495057; -fx-font-size: 12px; -fx-font-weight: 600;" text="SUPPLIER DETAILS">
                <font><Font name="Arial" size="12" /></font>
            </Label>
            
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                
                <!-- Name Field -->
                <VBox spacing="4" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Supplier Name" />
                    <TextField fx:id="txtName" promptText="Enter supplier name" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <!-- Email Field -->
                <VBox spacing="4" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Email" />
                    <TextField fx:id="txtEmail" promptText="supplier@email.com" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <!-- Phone Field -->
                <VBox spacing="4" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Phone" />
                    <TextField fx:id="txtPhone" promptText="Contact number" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <!-- Address Field -->
                <VBox spacing="4" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Address" />
                    <TextField fx:id="txtAddress" promptText="Supplier address" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
            </GridPane>
            
            <!-- Compact Action Buttons -->
            <HBox spacing="8" alignment="CENTER" style="-fx-padding: 6 0 0 0;">
                <Button onAction="#addSupplier" prefHeight="36" prefWidth="130" style="-fx-background-color: linear-gradient(to right, #940857 0%, #c41766 100%); -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600; -fx-effect: dropshadow(gaussian, rgba(148,8,87,0.3), 6, 0, 0, 2);" text="âž• Add">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
                
                <Button onAction="#updateSupplier" prefHeight="36" prefWidth="130" style="-fx-background-color: #0dcaf0; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600;" text="âœ Update">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
                
                <Button onAction="#deleteSupplier" prefHeight="36" prefWidth="130" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600;" text="ðŸ—‘ Delete">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
            </HBox>
        </VBox>
        
    </VBox>
</AnchorPane>