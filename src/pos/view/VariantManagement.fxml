<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="800" prefHeight="480" minWidth="700" minHeight="400" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.controller.VariantManagementController">
    
    <stylesheets>
        <URL value="@/pos/css/variantmanagement.css"/>
    </stylesheets>
    
    <VBox spacing="12" AnchorPane.topAnchor="12" AnchorPane.bottomAnchor="12" AnchorPane.leftAnchor="12" AnchorPane.rightAnchor="12">
        
        <!-- Compact Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <VBox spacing="2" HBox.hgrow="ALWAYS">
                <Label fx:id="lblTitle" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" text="ðŸ”€ Manage Variants">
                    <font><Font name="Arial Bold" size="18" /></font>
                </Label>
                <Label style="-fx-text-fill: #6c757d; -fx-font-size: 11px;" text="Configure product variations (sizes, colors, etc.)" />
            </VBox>
            <Label style="-fx-background-color: #e9ecef; -fx-text-fill: #6c757d; -fx-padding: 4 12; -fx-background-radius: 12; -fx-font-size: 11px; -fx-font-weight: 600;" text="0 VARIANTS" />
        </HBox>
        
        <!-- Table Section with Priority -->
        <VBox spacing="8" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <Label style="-fx-text-fill: #495057; -fx-font-size: 12px; -fx-font-weight: 600;" text="VARIANT LIST">
                <font><Font name="Arial" size="12" /></font>
            </Label>
            
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" minWidth="40" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colName" text="Variant Name" prefWidth="180" minWidth="120"/>
                    <TableColumn fx:id="colSku" text="SKU" prefWidth="120" minWidth="80"/>
                    <TableColumn fx:id="colBarcode" text="Barcode" prefWidth="120" minWidth="80"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="90" minWidth="70" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80" minWidth="60" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colActive" text="Active" prefWidth="80" minWidth="60" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>
        </VBox>
        
        <!-- Compact Form Section -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <Label style="-fx-text-fill: #495057; -fx-font-size: 12px; -fx-font-weight: 600;" text="VARIANT DETAILS">
                <font><Font name="Arial" size="12" /></font>
            </Label>
            
            <!-- Input Fields Rows -->
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="35" />
                    <ColumnConstraints percentWidth="22" />
                    <ColumnConstraints percentWidth="22" />
                    <ColumnConstraints percentWidth="21" />
                </columnConstraints>
                
                <!-- Row 1 -->
                <VBox spacing="4" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Variant Name" />
                    <TextField fx:id="txtName" promptText="e.g. Small 250ml, Red, XL" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <VBox spacing="4" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="SKU" />
                    <TextField fx:id="txtSku" promptText="SKU code" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <VBox spacing="4" GridPane.rowIndex="0" GridPane.columnIndex="2">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Barcode" />
                    <TextField fx:id="txtBarcode" promptText="Barcode" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <VBox spacing="4" GridPane.rowIndex="0" GridPane.columnIndex="3">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Stock" />
                    <TextField fx:id="txtStock" promptText="Qty" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <!-- Row 2 -->
                <VBox spacing="4" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Selling Price" />
                    <TextField fx:id="txtPrice" promptText="0.00" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <VBox spacing="4" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Cost" />
                    <TextField fx:id="txtCost" promptText="0.00" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 8;" />
                </VBox>
                
                <VBox spacing="4" alignment="BOTTOM_LEFT" GridPane.rowIndex="1" GridPane.columnIndex="2">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text=" " />
                    <CheckBox fx:id="chkActive" selected="true" text="Active" style="-fx-text-fill: #495057; -fx-font-weight: 600; -fx-font-size: 12px;" />
                </VBox>
            </GridPane>
            
            <!-- Compact Action Buttons -->
            <HBox spacing="8" alignment="CENTER" style="-fx-padding: 6 0 0 0;">
                <Button onAction="#addVariant" prefHeight="36" prefWidth="140" style="-fx-background-color: linear-gradient(to right, #940857 0%, #c41766 100%); -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600; -fx-effect: dropshadow(gaussian, rgba(148,8,87,0.3), 6, 0, 0, 2);" text="âž• Add">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
                
                <Button onAction="#updateVariant" prefHeight="36" prefWidth="140" style="-fx-background-color: #0dcaf0; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600;" text="âœ Update">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
                
                <Button onAction="#deleteVariant" prefHeight="36" prefWidth="140" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600;" text="ðŸ—‘ Delete">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
            </HBox>
        </VBox>
        
    </VBox>
</AnchorPane>