<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="600" prefHeight="400" minWidth="500" minHeight="340" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.controller.ModifierOptionsController">
    
    <stylesheets>
        <URL value="@/pos/css/modifieroptions.css"/>
    </stylesheets>
    
    <VBox spacing="12" AnchorPane.topAnchor="12" AnchorPane.bottomAnchor="12" AnchorPane.leftAnchor="12" AnchorPane.rightAnchor="12">
        
        <!-- Compact Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <VBox spacing="2" HBox.hgrow="ALWAYS">
                <Label fx:id="lblTitle" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" text="âš™ï¸ Modifier Options">
                    <font><Font name="Arial Bold" size="18" /></font>
                </Label>
                <Label style="-fx-text-fill: #6c757d; -fx-font-size: 11px;" text="Configure available options for this modifier" />
            </VBox>
            <Label style="-fx-background-color: #e9ecef; -fx-text-fill: #6c757d; -fx-padding: 4 12; -fx-background-radius: 12; -fx-font-size: 11px; -fx-font-weight: 600;" text="0 OPTIONS" />
        </HBox>
        
        <!-- Table Section with Priority -->
        <VBox spacing="8" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <Label style="-fx-text-fill: #495057; -fx-font-size: 12px; -fx-font-weight: 600;" text="OPTION LIST">
                <font><Font name="Arial" size="12" /></font>
            </Label>
            
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="70" minWidth="60" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colName" text="Option Name" prefWidth="320" minWidth="200"/>
                    <TableColumn fx:id="colPrice" text="Additional Price" prefWidth="150" minWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
                </columns>
            </TableView>
        </VBox>
        
        <!-- Compact Form Section -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <Label style="-fx-text-fill: #495057; -fx-font-size: 12px; -fx-font-weight: 600;" text="OPTION DETAILS">
                <font><Font name="Arial" size="12" /></font>
            </Label>
            
            <!-- Input Fields Row -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Option Name" />
                    <TextField fx:id="txtName" promptText="e.g. Small, Medium, Large" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 10;" />
                </VBox>
                
                <VBox spacing="4">
                    <Label style="-fx-text-fill: #495057; -fx-font-size: 11px; -fx-font-weight: 600;" text="Additional Price" />
                    <TextField fx:id="txtPrice" promptText="0.00" prefWidth="150" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-border-width: 1.5; -fx-padding: 10;" />
                </VBox>
            </HBox>
            
            <!-- Compact Action Buttons -->
            <HBox spacing="8" alignment="CENTER" style="-fx-padding: 6 0 0 0;">
                <Button onAction="#addOption" prefHeight="36" prefWidth="140" style="-fx-background-color: linear-gradient(to right, #940857 0%, #c41766 100%); -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600; -fx-effect: dropshadow(gaussian, rgba(148,8,87,0.3), 6, 0, 0, 2);" text="âž• Add">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
                
                <Button onAction="#updateOption" prefHeight="36" prefWidth="140" style="-fx-background-color: #0dcaf0; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600;" text="âœ Update">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
                
                <Button onAction="#deleteOption" prefHeight="36" prefWidth="140" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600;" text="ðŸ—‘ Delete">
                    <font><Font name="Arial" size="13" /></font>
                </Button>
            </HBox>
        </VBox>
        
    </VBox>
</AnchorPane>