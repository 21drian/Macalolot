<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pos.controller.PosContentController"
            prefWidth="1190" prefHeight="700">

    <SplitPane prefWidth="1190" prefHeight="700">
        <items>

            <!-- Products -->
            <VBox spacing="10" prefWidth="600">
                <TextField fx:id="txtSearch" promptText="Search name / SKU / barcode"/>
                <TableView fx:id="tblProducts" prefHeight="600">
                    <columns>
                        <TableColumn fx:id="colPName" text="Name" prefWidth="220"/>
                        <TableColumn fx:id="colPPrice" text="Price" prefWidth="100"/>
                        <TableColumn fx:id="colPStock" text="Stock" prefWidth="80"/>
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <TextField fx:id="txtQty" promptText="Qty" prefWidth="80"/>
                    <Button text="Add to Cart" onAction="#addToCart"/>
                </HBox>
            </VBox>

            <!-- Cart -->
            <VBox spacing="10" prefWidth="560">
                <Label text="Cart"/>
                <TableView fx:id="tblCart" prefHeight="520">
                    <columns>
                        <TableColumn fx:id="colCName" text="Name" prefWidth="220"/>
                        <TableColumn fx:id="colCQty" text="Qty" prefWidth="60"/>
                        <TableColumn fx:id="colCPrice" text="Price" prefWidth="100"/>
                        <TableColumn fx:id="colCTotal" text="Total" prefWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Label text="Grand Total:"/>
                    <Label fx:id="lblGrandTotal" text="0.00"/>
                </HBox>

                <HBox spacing="10">
                    <Button text="Remove Selected" onAction="#removeSelected"/>
                    <Button text="Clear Cart" onAction="#clearCart"/>
                    <Button text="Checkout" onAction="#checkout"/>
                </HBox>
            </VBox>

        </items>
    </SplitPane>
</AnchorPane>
